.row.text-center.step-banner
  = image_tag 'parent-md.png'
  %h4 Daycare Parent
.row.pane-container.text-center
  .row.step-banner
    .col-sm-3.col-xs-3.step-item.first-step.item-parent
      .step-label
        = image_tag 'step-arrow.png', :class => "step-arrow right"
        = image_tag 'step-check-prt.png'
    .col-sm-3.col-xs-3.step-item.second-step.item-parent.active    
      .step-label
        = image_tag 'step-arrow.png', :class => "step-arrow right"
        = image_tag 'step-arrow.png', :class => "step-arrow left"
        = image_tag 'parent-sm.png'
        %span Parent Information
    .col-sm-3.col-xs-3.step-item.third-step.item-parent
      .step-label
        = image_tag 'step-arrow.png', :class => "step-arrow right"
        = image_tag 'step-arrow.png', :class => "step-arrow left"
        = image_tag 'step-pending.png'
    .col-sm-3.col-xs-3.step-item.fourth-step.item-parent
      .step-label
        = image_tag 'step-arrow.png', :class => "step-arrow left"
        = image_tag 'step-pending.png'
  .row
    = devise_error_messages!
  .parent-list-container
    .parent-item
      .row.parent-info.text-left
        .col-sm-8
          .row
            %h3 Parent Information
          .row      
            = f.text_field :name, autofocus: true, :class => 'form-control input-round', :placeholder => "User Name", :required =>"true"
          .row
            = f.email_field :email, :class => 'form-control input-round', :placeholder => "Email", :required =>"true"
          .row
            = f.password_field :password, :class => 'form-control input-round', :placeholder => "Password", :required =>"true"
          .row
            = f.password_field :password_confirmation, :class => 'form-control input-round', :placeholder => "Password Confirmation", :required =>"true"
          - if @minimum_password_length
            .row
              %em
                (#{@minimum_password_length} characters minimum)
          = f.fields_for :user_daycare do |user_daycare|
            = user_daycare.hidden_field :daycare_id, value: (params[:daycare_id].blank?) ? params[:user][:user_daycare_attributes][:daycare_id] : params[:daycare_id]
