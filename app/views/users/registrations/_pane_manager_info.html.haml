.row.text-center.step-banner
  = image_tag 'manager-md.png'
  %h4 Daycare Manager
.row.pane-container.text-center
  .row.text-center
    = image_tag 'manager-bar-1.png'
  .row.parent-info
    - if @daycare.errors.any?
      #error_explanation
        %h2= pluralize(@daycare.errors.count, "error") + " prohibited this daycare from being saved:"

        %ul
          - @daycare.errors.full_messages.each do |message|
            %li= message         
    .col-sm-8.text-left
      .row
        %h5 DAYCARE NAME      
        = daycare.text_field :name, class: 'form-control input-round', :placeholder => "Daycare Name"
      .row
        %h5 ADDRESS LINE1     
        = daycare.text_field :address_line1, class: 'form-control input-round', :placeholder => "Address Line1"
      .row
        %h5 POSTCODE
        = daycare.text_field :postcode, class: 'form-control input-round', :placeholder => "Postcode"
      .row
        %h5 COUNTRY
        = daycare.text_field :country, class: 'form-control input-round', :placeholder => "Country"
      .row
        %h5 TELEPHONE
        = daycare.text_field :telephone, class: 'form-control input-round', :placeholder => "Telephone"
      = daycare.fields_for :user_daycares do |user_daycare|
        = user_daycare.fields_for :user do |user|
          .row
            %h5 NAME      
            = user.text_field :name, class: 'form-control input-round', :placeholder => "Name"
          .row
            %h5 EMAIL      
            = user.email_field :email, class: 'form-control input-round', :placeholder => "Email"
          .row
            %h5 PASSWORD
            = user.password_field :password, class: 'form-control input-round', :placeholder => "Password"
          .row
            %h5 PASSWORD CONFIRMATION
            = user.password_field :password_confirmation, autocomplete: 'off', class: 'form-control input-round', :placeholder => "Password Confirmation"
          - if @minimum_password_length
            .row
              %em{:style => "padding-left: 20px;"}
                (#{@minimum_password_length}) characters minimum
:javascript
  jQuery(document).ready(function() {
    $('#add_child').click(function(e){
      var template='<div class="parent-item"><div class="row parent-info"><div class="col-sm-4 col-sm-offset-3"><div class="row"><input class="form-control input-round" placeholder="Add your child name"></div><div class="row"><input class="form-control input-round" placeholder="Year of birth"></div></div></div><div class="row parent-department"><div class="col-sm-6 col-sm-offset-3"><h3>Select Department</h3>';

      for(i = 0; i < 4; i++){
        var chk_id = "chk_depart_" + $('.parent-item').length * 10 + i;
        template += '<div class="row"><input id="'+chk_id+'" name="check_box" style="display: none;" type="checkbox"><label for="'+chk_id+'">Select Department</label></div>';
      }
      template += '</div></div></div>';
      $('.parent-list-container').append(template);    

      e.preventDefault()
    });
  });
