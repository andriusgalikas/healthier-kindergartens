.row.text-center
  = image_tag 'manager-md.png'
  %h4 Daycare Manager
.row.pane-container.text-center
  .row.step-banner
    .col-sm-3.col-xs-3.step-item.first-step.active
      .step-label
        = image_tag 'manager-sm.png'
        %span Register
    .col-sm-3.col-xs-3.step-item.second-step
      .step-label
        = image_tag 'step-pending.png'
    .col-sm-3.col-xs-3.step-item.third-step
      .step-label
        = image_tag 'step-pending.png'
    .col-sm-3.col-xs-3.step-item.fourth-step    
      .step-label
        = image_tag 'step-pending.png'
  .row.parent-info
    - if @daycare.errors.any?
      #error_explanation
        %h2= pluralize(@daycare.errors.count, "error") + " prohibited this daycare from being saved:"

        %ul
          - @daycare.errors.full_messages.each do |message|
            %li= message         
    .col-sm-8.text-left
      .row
        %h5 DAYCARE NAME      
        = daycare.text_field :name, class: 'form-control input-round', :placeholder => "Daycare Name", :required =>"true"
      .row
        %h5 WEBSITE URL      
        = daycare.text_field :url, class: 'form-control input-round', :placeholder => "Daycare Name"
      .row
        %h5 ADDRESS LINE
        = daycare.text_field :address_line1, class: 'form-control input-round', :placeholder => "Address Line", :required =>"true"
      .row
        %h5 POSTCODE
        = daycare.text_field :postcode, class: 'form-control input-round', :placeholder => "Postcode", :required =>"true"
      .row
        %h5 COUNTRY
        = daycare.text_field :country, class: 'form-control input-round', :placeholder => "Country", :required =>"true"
      .row
        %h5 TELEPHONE
        = daycare.text_field :telephone, class: 'form-control input-round', :placeholder => "Telephone", :required =>"true"
      = daycare.fields_for :user_daycares do |user_daycare|
        = user_daycare.fields_for :user do |user|
          .row
            %h5 NAME      
            = user.text_field :name, class: 'form-control input-round', :placeholder => "Name", :required =>"true"
          .row
            %h5 EMAIL      
            = user.email_field :email, class: 'form-control input-round', :placeholder => "Email", :required =>"true"
          .row
            %h5 PASSWORD
            = user.password_field :password, class: 'form-control input-round', :placeholder => "Password", :required =>"true"
          .row
            %h5 PASSWORD CONFIRMATION
            = user.password_field :password_confirmation, autocomplete: 'off', class: 'form-control input-round', :placeholder => "Password Confirmation", :required =>"true"
          - if @minimum_password_length
            .row
              %em{:style => "padding-left: 20px;"}
                (#{@minimum_password_length}) characters minimum
