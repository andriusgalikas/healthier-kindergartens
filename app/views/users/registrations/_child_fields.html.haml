.row.text-center.step-banner.fileupload-container
  .fileUpload
    %span.upload-wrapper
      = image_tag 'parent-upload.png'
      %span.caption Upload your child photo!
      = f.fields_for :profile_image do |profile_image|
        = profile_image.file_field :file, class: 'upload', :required =>"true"              
  %h4 Daycare Parent
.row.pane-container.text-center
  .row.step-banner
    .col-sm-3.col-xs-3.step-item.first-step.item-parent
      .step-label
        = image_tag 'step-arrow.png', :class => "step-arrow right"
        = image_tag 'step-check-prt.png'
    .col-sm-3.col-xs-3.step-item.second-step.item-parent
      .step-label
        = image_tag 'step-arrow.png', :class => "step-arrow right"
        = image_tag 'step-arrow.png', :class => "step-arrow left"
        = image_tag 'step-check-prt.png'
    .col-sm-3.col-xs-3.step-item.third-step.item-parent.active    
      .step-label
        = image_tag 'step-arrow.png', :class => "step-arrow right"
        = image_tag 'step-arrow.png', :class => "step-arrow left"
        = image_tag 'parent-sm.png'
        %span Children
    .col-sm-3.col-xs-3.step-item.fourth-step.item-parent
      .step-label
        = image_tag 'step-arrow.png', :class => "step-arrow left"
        = image_tag 'step-pending.png'
  .row
    = devise_error_messages!
  .parent-list-container
    .parent-item
      .row.parent-info.text-left
        .col-sm-8
          #children.multi-field
            .child-item
              %h3 Children
              .row.parent-info
                .row  
                  = f.text_field :name, :class => 'form-control input-round', :placeholder => "Add your child name", :required =>"true"
                .row
                  = f.text_field :birth_date, :class => 'datepicker form-control input-round', value: (f.object.birth_date.blank? ? '' : f.object.birth_date.strftime('%d/%m/%Y')), :placeholder => "Year of Birth", :required =>"true"
              .row.parent-department  
                %h4 Select Department
                - @departments.each do |department|
                  .row
                    = f.radio_button :department_id, "#{department.id}", :style => "display: none;", :required =>"true"
                    = f.label :"department_id_#{department.id}", department.name              
.row.parent-button-box
  = link_to(image_tag('parent-add.png') + " ADD CHILDREN", '', {class: "btn btn-normal add-child"})
