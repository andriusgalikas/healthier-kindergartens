.navbar-header
  %button.navbar-toggle.collapsed{'data-toggle': 'collapse', 'data-target': '#navbar', 'aria-expanded': false, 'aria-controls': 'navbar'}
    %span.sr-only Toggle Navigation
    %span.icon-bar
    %span.icon-bar
    %span.icon-bar
    %span.icon-bar
  %a.navbar-brand{'href': '#'} Health Conversation

#navbar.navbar-collapse.collapse
  %ul.nav.navbar-nav
    %li
      = link_to '#' do
        %i.glyphicon.glyphicon-plus
        Add Child
    - if current_user.parentee?
      - current_user.children.each_with_index do |child, index|
        %li{class: index == 0 ? 'active' : ''}
          = link_to '#' do
            = child.name
