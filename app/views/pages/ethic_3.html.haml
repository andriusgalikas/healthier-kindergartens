.legacy-ethic
  .container
    .row.step-wrapper
      %h2.step-title=t('pages.ethic.step3.title').html_safe
      .col-md-12.content
        %p=t('pages.ethic.step3.para1').html_safe
        %p=t('pages.ethic.step3.para2').html_safe
        %p=t('pages.ethic.step3.para3').html_safe
        %p=t('pages.ethic.step3.para4').html_safe
        / %p=t('pages.ethic.step3.para5').html_safe
      .col-md-12.text-center
        %button.btn.hcc-btn-vertical
          - if current_user.nil?
            %a{'href': '/manager/register?deposit=true'}
              = t('pages.ethic.label.ready')
          - else
            - if current_user.deposit_required  
              %a{'href': '/upgrade'}
                = t('pages.ethic.label.ready')
            - else
              %a{'href': '/user_plan'}
                = t('pages.ethic.label.ready')
