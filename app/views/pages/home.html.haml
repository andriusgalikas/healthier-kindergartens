            %h2= t('pages.home.subcontent_path')
            .path-text.row
              .col-md-10.col-xs-12
                %p= t('pages.home.path_1')
                %a.content-link{href: path_path}= t('pages.home.path_link')
              .col-md-2.col-xs-12
                %button.btn.hcc-btn
                  = link_to journey_path do
                    %i.glyphicon.glyphicon-chevron-right
                    = t('pages.home.path_button')
          .col-md-5 &nbsp;

        .row
