#legacy-home
  %div
    .row.slider
      #carousel-example-generic.carousel.slide{"data-ride" => "carousel"}
        / Indicators
        %ol#carousel-indicators.carousel-indicators
          %li.active{"data-slide-to" => "0", "data-target" => "#carousel-example-generic"}
          %li{"data-slide-to" => "1", "data-target" => "#carousel-example-generic"}
          %li{"data-slide-to" => "2", "data-target" => "#carousel-example-generic"}
        / Wrapper for stslides
        .carousel-inner{:role => "listbox"}
          .item.active
            = image_tag 'slide-0.png'
            .carousel-content
              .carousel-header
                = t('pages.home.slide_header').html_safe
              %p.carousel-main-content= t('pages.home.slide_header_0_content')
              %p.carousel-sub-content= t('pages.home.slide_header_0_subcontent')
          .item
            = image_tag 'slide-1.png'
            .carousel-content
              .carousel-header
                = t('pages.home.slide_header').html_safe
              %p.carousel-main-content= t('pages.home.slide_header_1_content')
              %p.carousel-sub-content= t('pages.home.slide_header_1_subcontent')
          .item
            = image_tag 'slide-3.png'
            .carousel-content
              .carousel-header
                = t('pages.home.slide_header').html_safe
              %p.carousel-main-content= t('pages.home.slide_header_2_content')
              %p.carousel-sub-content= t('pages.home.slide_header_2_subcontent')
        %a
        / Controls
        %a.left.carousel-control{href: '#carousel-example-generic', role: 'button', 'data-slide': 'prev'}
          %span.glyphicon.glyphicon-chevron-left{'aria-hidden': 'true'}
          %span.sr-only Previous
        %a.right.carousel-control{href: '#carousel-example-generic', role: 'button', 'data-slide': 'next'}
          %span.glyphicon.glyphicon-chevron-right{'aria-hidden': 'true'}
          %span.sr-only Next

