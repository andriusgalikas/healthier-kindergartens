    / END SLIDER
    / END SLIDER
    .main-content
      .container.content
        .row
          .col-md-7.col-xs-12.sub-content.start
            = image_tag "dart.png"
            %h2= t('pages.home.subcontent_start_here')
            .start-text.row
              .col-md-9.col-xs-12
                %p= t('pages.home.start_here_1')
                %a.content-link{href: mission_path}= t('pages.home.start_here_link')
              .col-md-3.col-xs-12
                %button.btn.hcc-btn
                  = link_to journey_path do
                    %i.glyphicon.glyphicon-chevron-right
                    = t('pages.home.start_here_button')
          .col-md-5 &nbsp;

        .row
          .col-md-5 &nbsp;
          .col-md-7.col-xs-12.sub-content.standard
            = image_tag "standard-new.png"
            %h2= t('pages.home.subcontent_standard')
            .standard-text.row
              .col-md-2.col-xs-12
                %button.btn.hcc-btn
                  = link_to journey_path do
                    %i.glyphicon.glyphicon-chevron-right
                    = t('pages.home.standard_button')
              .col-md-10.col-xs-12
