.row.centralize
  %label.step-instruction= t('illnesses.labels.illness_details')

.form-group.patient-count
  %label.step-instruction{for: 'workers-count'}= t('illnesses.labels.workers_count')
  %input{type: 'number', class: 'form-control', name: 'sick_workers_count', min: '0'}

.form-group.patient-count
  %label.step-instruction{for: 'children-count'}= t('illnesses.labels.children_count')
  %input{type:'number', class: 'form-control', name: 'sick_children_count', min: '0'}

.form-group
  %label.step-instruction= t('illnesses.labels.illness_start_date')
  = text_field_tag 'record[start_date]', '', class: 'datepicker form-control'

.form-group
  %label.step-instruction= t('illnesses.labels.illness_end_date')
  = text_field_tag 'record[end_date]', '', class: 'datepicker form-control'

.form-group
  %label.step-instruction= t('illnesses.labels.possible_trigger')
  = text_area 'record', 'possible_trigger', class: 'form-control'

.form-group
  %label.step-instruction= t('illnesses.labels.extra_details')
  = text_area 'record', 'extra_details', class: 'form-control'
