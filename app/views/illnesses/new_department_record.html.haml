= content_for :title, t('illnesses.illness')
.illness-dash-container
  .container
    .row
      .col-md-12
        %h4.option-title= t('illnesses.illness')
        %h5= t('illnesses.labels.department_record_help_text')
    .row.content-main.illnesses
      .col-md-12
        = form_tag create_department_record_illnesses_path, id: 'new-department-record' do
          %label= t('illnesses.labels.department_details')
          %section.choose-department
            = render 'department_options_selector'

          %label= t('illnesses.labels.illness_details')
          %section.illness-details
            = render 'illnesses/department/illness_details'

          %label= t('illnesses.labels.additional_actions')
          %section.additional-actions
            = render 'additional_actions'

          %label= t('illnesses.labels.worker_confirmation')
          %section.worker-department
            = render 'worker_department'
            .row.worker-names
            .row.worker-profile
            .row.worker-confirmation
