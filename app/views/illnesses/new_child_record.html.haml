= content_for :title, t('illnesses.illness')

.row
  .page-header
    %h3= t('illnesses.illness')

.row.illnesses
  = form_tag create_child_record_illnesses_path, id: 'new-child-record' do
    %label= t('illnesses.labels.choose_child')
    %section.child-department
      = render 'child_department'
      .choose-child

    %label= t('illnesses.labels.child_details')
    %section.child-profile

    %label= t('illnesses.labels.illness_details')
    %section.illness-details
      = render 'illness_details'

    %label= t('illnesses.labels.contact_parent')
    %section.contact-parent
      = render 'contact_parent'

    %label= t('illnesses.labels.contact_doctor')
    %section.contact-doctor
      = render 'contact_doctor'

    %label= t('illnesses.labels.additional_actions')
    %section.additional-actions
      = render 'additional_actions'

    %label= t('illnesses.labels.worker_confirmation')
    %section.worker-department
      = render 'worker_department'
      .worker-names
      .worker-profile
      .worker-confirmation

:javascript
  Illnesses.initChildRecord();
