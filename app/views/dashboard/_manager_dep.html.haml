.row.content-header
  - if !current_user.active_subscribed?
    = render 'upgrade_notify'
.row.content-main
  - if !current_user.is_trial_member? && (!current_user.active_subscribed?)
    .col-md-5.col-sm-6.col-xs-12
      #main-menu.apply-customer
        .menu-items
          - @permissions.each do |permission|
            - if permission.active
              - if 2 >= permission.plan
                = link_to permission.path, id: permission.element do
                  = image_tag permission.image
                  %span=t(permission.label_key)
              - else
                %a{href: '#', id: permission.element}
                  = image_tag permission.image
                  %span=t(permission.label_key)
          %a#item_survey.border-style-1{href: '#'}
            = image_tag 'dashboard_icons/1'
            %span=t('dashboard.menu_item.risk_assessment_survey')        
          %a#item_illness.border-style-1{href: '#'}
            = image_tag 'icons/4', style: "width: 67px; height: 67px"
            %span=t('dashboard.menu_item.infection_occurrence_alert')
          = link_to instruction_path, id: 'item_instruction', class: 'border-style-1' do
            = image_tag 'dashboard_icons/3'
