- if params[:download_pdf].present?
  / Modal
  #dash_step_1
    .modal-dialog
      / Modal content
      .modal-content
        .modal-header
          %button.my-button.close.plainmodal-close{"data-dismiss" => "modal", :type => "button"} Ã—
          %h4.modal-title= t('Download Pdf').html_safe
        .modal-body
          = form_for [LocalePoster.new] do |f|
            = t('Lorem Ipsum is good thing Lorem Ipsum is good thing Lorem Ipsum is good thing Lorem Ipsum is good thing').html_safe
            = f.hidden_field :download_pdf, value: params[:download_pdf]

            .email-box-group
              .email-box
                %label{:for => "email_box"}
                  = t('Email')
                %input{:type=>"text", :name => "user_email", :id => "user_email"}

            .modal-footer
              = f.submit 'Download PDF', :class => 'btn btn-blue btn-large', id: 'download-submit'

:javascript
  jQuery(document).ready(function() {
    var effect = {
        open: function(duration, complete) {
          this.css({
            display:          'block',
            opacity:          0,
            top:              -50 - this.outerHeight(),
            marginTop:        0
          })
          .animate({opacity: 1, top: 100}, duration, complete);
        },
        close: function(duration, complete) {
          this.animate({
            opacity:          0,
            top:              -50 - this.outerHeight()
          }, duration, function() {
            $(this).css({display: 'none'});
            complete();
          });
        }
      };

    modalStep1 = $('#dash_step_1').plainModal({effect: effect, duration: 500});
    dash_wizard();

    function dash_wizard(){
      modalStep1 = $('#dash_step_1').plainModal('open', {force: true});
    }

    $('#download-submit').click(function(e){
      $(".my-button").click();
    });
  });
