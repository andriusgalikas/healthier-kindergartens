%header
  = link_to (yield :previous_path), class: 'previous' do
    = image_tag 'todo-left-arrow.png'

  -if %(todos todo_completes).include?(controller.controller_name)
    = image_tag 'todo-md.png', class: 'header-mark'  
  %h2= yield :page_title

  - if user_signed_in?
    .dropdown
      %ul.dropdown-menu{role: 'menu', 'aria-labelledby': 'dLabel'}
        %li= link_to t('pages.nav_bar.dashboard'), dashboard_path
        %li= link_to t('pages.nav_bar.logout'), destroy_user_session_path, method: :delete

    .partner-profile
      = image_tag current_user_role_avatar, class: 'img img-thumbnail img-circle'
