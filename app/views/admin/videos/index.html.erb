<% content_for :title, 'Videos' %>
<% content_for :breadcrumb, 'Videos' %>

<div class="twelvecol">
  <div class="page-header">
    <%= link_to new_admin_video_path, :class => "btn btn-blue btn-large", "data-placement" => "bottom", "data-toggle" => "tooltip", title: "Add Video" do %>
      <i class="icon-plus"></i>
    <% end %>
    <h2 class="widget widget-header">Videos</h2>
  </div>
  <% if @videos.empty? %>
    <div class="widget widget-content">
      <div class="helper-notification">
        <p>You don't have any videos yet.</p>
        <i class="icon-copy"></i>
      </div>
    </div>
  <% else %>
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>URL</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @videos.each do |video| %>
            <tr>
                <td>
                    <%= video.url %>
                </td>
              <td>
                <%= link_to admin_video_path(video) do %>
                    <i class="icon-search"></i>
                <% end %>
                <%= link_to edit_admin_video_path(video) do %>
                  <i class="icon-pencil"></i>
                <% end %>
                <%= link_to [:admin, video], method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="icon-remove"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>