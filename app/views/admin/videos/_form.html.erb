<%= form_for [:admin, @video], url: url do |f| %>
    <div class="threecol"></div>
    <div class="ninecol last">
        <%= render partial: 'shared/admin/errors', locals: { object: @video } %>
    </div>

    <div class="threecol">
        <h3>Video details</h3>
    </div>

    <div class="ninecol last">
        <fieldset class="widget widget-content">
            <div class="form-group">
                <%= f.label :url %>
                <%= f.text_field :url, :class => 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :category %>
                <%= f.radio_button :category, 'free', (!@ori_video.nil? && @ori_video.category == 'free') ? {:checked => true} : {:checked => false}  %> Free
                <%= f.radio_button :category, 'paid', (!@ori_video.nil? && @ori_video.category == 'paid') ? {:checked => true} : {:checked => false} %> Paid
            </div>
            <div class="form-group">
                <%= f.label :type %>
                <%= f.radio_button :video_type, '1', (!@ori_video.nil? && @ori_video.video_type == '1') ? {:checked => true} : {:checked => false} %> 1
                <!--
                <%= f.radio_button :video_type, '2' %> 2
                -->
                <%= f.radio_button :video_type, '2', (!@ori_video.nil? && @ori_video.video_type == '2') ? {:checked => true} : {:checked => false} %> 2
                <%= f.radio_button :video_type, '3', (!@ori_video.nil? && @ori_video.video_type == '3') ? {:checked => true} : {:checked => false} %> 3
                <%= f.radio_button :video_type, '4', (!@ori_video.nil? && @ori_video.video_type == '4') ? {:checked => true} : {:checked => false} %> 4
                <%= f.radio_button :video_type, '5', (!@ori_video.nil? && @ori_video.video_type == '5') ? {:checked => true} : {:checked => false} %> 5
            </div>
            <div class="form-group">
                <%= f.label :language %>
                <%= f.select :language, options_for_select(languages, :selected => f.object.language), {},{:class => 'form-control'} %>
            </div>
        </fieldset>
        <div class="form-action">
            <%= f.submit 'Submit', :class => 'btn btn-blue btn-large' %>
        </div>
    </div>
<% end %>