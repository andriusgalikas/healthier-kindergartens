<%= form_for [:admin, @locale_logo], method: :post, multipart: true  do |f| %>
    <div class="threecol"></div>
    <div class="ninecol last">
        <%= render partial: 'shared/admin/errors', locals: { object: @locale_logo } %>
    </div>

    <div class="threecol">
        <h3>Poster details</h3>
    </div>

    <div class="ninecol last">
        <fieldset class="widget widget-content">
            <div class="form-group">
                <%= f.label :logo %>
                <%= f.file_field :logo, :class => 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :type %>
                <%= f.radio_button :logo_type, '1', (!@ori_locale_logo.nil? && @ori_locale_logo.logo_type == 1) ? {:checked => true} : {:checked => false}  %> Default
            </div>
            <div class="form-group">
                <%= f.label :description %>
                <%= f.text_area :description, (@ori_locale_logo.nil?) ? {:class => 'form-control'} : {:class => 'form-control', :value => "#{@ori_locale_logo.description}"} %>
            </div>
            <div class="form-group">
                <%= f.label :language %>
                <%= f.select :language, options_for_select(languages, :selected => f.object.language), {},{:class => 'form-control'} %>
            </div>
        </fieldset>
        <div class="form-action">
            <%= f.submit 'Submit', :class => 'btn btn-blue btn-large' %>
        </div>
    </div>
<% end %>