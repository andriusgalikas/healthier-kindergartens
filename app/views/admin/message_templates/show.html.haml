= content_for :title, 'Message Template'

.row
  .page-header
    %h3 Message Template content

.row
  %dl.dl-horizontal
    %dt Subject
    %dd= @template.sub_subject.parent_subject.title
  %dl.dl-horizontal
    %dt Sub-subject
    %dd= @template.sub_subject.title
  %dl.dl-horizontal
    %dt Recipient
    %dd= @template.target_role.humanize

.row.message-content-stage
  .fr-view
    = @template.content.html_safe

.row
  .form-buttons
    .col-md-6
      = link_to "Delete", admin_message_template_path(@template), method: :delete, data: {confirm: 'Are you sure you want to delete this template?'}, class: 'btn btn-raised btn-info'
    .col-md-6
      = link_to "Edit", edit_admin_message_template_path(@template), class: 'btn btn-raised btn-success'
