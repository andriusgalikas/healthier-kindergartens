= content_for :title, 'New Message Template'
- page_step = 2

.row
  .page-header
    %h3= add_subject_header

.row
  = render partial: 'progress_bar', locals: {page_step: page_step}

.row#main-content
  %h4.step-instruction Please Add Subject :
  = form_tag sub_subject_admin_message_templates_path, method: :post do
    .form-group
      = text_field_tag :subject_title, params[:subject_title], placeholder: t('admin.subject'), class: 'form-control', id: 'subject-title', required: true

    .row.form-buttons
      .col-md-6
        %a{href: choose_template_admin_message_templates_path, class: 'btn btn-raised btn-info'} Back
      .col-md-6
        = submit_tag 'Next', class: 'btn btn-raised btn-success'
