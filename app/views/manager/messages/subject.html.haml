= content_for :title, 'New Message'
- step_size = 4
- page_step = 2

.row
  .page-header
    %h3= choose_subject_header

.row
  = render partial: 'shared/progress_bar', locals: {step_size: step_size, page_step: page_step}

.row#main-content
  %h4.step-instruction Please Choose Subject :

  = form_tag sub_subject_manager_messages_path, method: :post do
    = hidden_field_tag 'target_role', params[:target_role]
    .form-group
      = select_tag :subject_id, options_from_collection_for_select(@subjects, 'id', 'title'), class: 'select'

    .form-buttons
      .col-md-6
        %a{href: recipient_manager_messages_path(target_role: params[:target_role]), class: 'btn btn-raised btn-info'} Back
      .col-md-6
        = submit_tag 'Next', class: 'btn btn-raised btn-success'
