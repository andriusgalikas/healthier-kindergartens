= content_for :title, 'New Notification'
- step_size = 5
- page_step = 1

.row
  .page-header
    %h3= choose_department_header

.row
  = render partial: '/shared/progress_bar', locals: {step_size: step_size, page_step: page_step}

.row#main-content
  %h4.step-instuction Please choose target daycare for this message

  = form_tag recipient_manager_messages_path, method: :post do
    .form-group
      - @departments.each do |department|
        .radio
          %label
            %input{type: 'radio', name: 'target_department', value: department.id, checked: params[:target_department].to_i == department.id}
            = department.name

    .form-buttons
      .col-md-6
        %a{href: manager_messages_path, class: 'btn btn-raised btn-info'} Back
      .col-md-6
        = submit_tag 'Next', class: 'btn btn-raised btn-success'

:javascript
  $.material.init();
