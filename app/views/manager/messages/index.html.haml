= content_for :title, t('messages.message')

.row
  .page-header
    %h3= t('messages.breadcrumb.message') + ' :'

.row#main-menu
  .menu-items
    .row
      .col-md-6.centralize
        = link_to recipient_manager_messages_path, class: 'btn btn-raised' do
          = image_tag 'template-message.png'
          %span Send Notifications
      .col-md-6.centralize
        = link_to message_list_manager_messages_path(list_type: 'sent'), class: 'btn btn-raised' do
          = image_tag 'template-send.png'
          %span Sent Notifications
    .row
      .col-md-6.centralize
        = link_to message_list_manager_messages_path(list_type: 'received'), class: 'btn btn-raised' do
          = image_tag 'message.png', style: 'background: #1194bd; border-radius: 10px;'
          %span Received Notifications
