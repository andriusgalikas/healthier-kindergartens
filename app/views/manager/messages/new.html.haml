= content_for :title, 'New Notification'
- step_size = 4
- page_step = 4

.row
  .page-header
    %h3= create_message_from_template_header

.row
  = render partial: '/shared/progress_bar', locals: {step_size: step_size, page_step: page_step}

.row#main-content
  = form_for [:manager, @message] do |f|
    = f.hidden_field :message_template_id, value: @message_template.id
    = f.hidden_field :target_role, value: @message_template.target_role
    = f.hidden_field :title, value: @sub_subject.title

    .form-group
      %label.step-instruction(for: :content) Please Edit and Send Message :
      = f.text_area :content, id: 'message_content', value: @message_template.content

    .form-buttons
      .col-md-6
        %a{href: sub_subject_manager_messages_path(target_role: params[:target_role], subject_id: params[:subject_id], sub_subject_id: params[:sub_subject_id]), class: 'btn btn-raised btn-info'} Back
      .col-md-6
        = submit_tag 'Send', class: 'btn btn-raised btn-success'

:javascript
  $('#message_content').froalaEditor({
    heightMin: 250
  });
