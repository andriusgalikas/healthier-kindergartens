- user_is_owner = current_user.id == discussion.owner_id
.row.discussion{id: discussion.id}
  .col-md-2.discussion-owner
    - unless user_is_owner
      - if discussion.owner.parentee?
      = image_tag discussion_owner_avatar(discussion), class: 'img'
      %p= discussion_owner_name(discussion)

  .col-md-8.discussion-content
    %p= discussion.content
    %p.discussion-time
      %small
        %em
          = time_ago_in_words(discussion.created_at) + ' ago'

  .col-md-2.discussion-owner
    - if user_is_owner
      = image_tag discussion_owner_avatar(discussion), class: 'img'
      %p= discussion_owner_name(discussion)
